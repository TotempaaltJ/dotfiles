[user]
    name = Martijn Arts
    email = arts.martijn@gmail.com
[core]
    editor = vim
[push]
    default = simple
[alias]
    unstage = reset HEAD --
    graph = log --graph --pretty=format:\"%C(yellow)[%C(red)%h %C(yellow)%an%C(reset)%C(yellow)] %C(reset)%C(cyan)%d%Creset %C(white)%s\" --decorate --branches=*

    ci = commit
    cim = commit -m
    br = branch
    st = status
    co = checkout

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"

[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = "nvim -d -u ~/.vimrc \"$LOCAL\" \"$REMOTE\""
